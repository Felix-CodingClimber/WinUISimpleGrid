<Window
    x:Class="WinUISimpleGrid.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUISimpleGrid"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <local:DataGrid ItemsSource="{x:Bind exampleItems}">
            <local:DataGrid.ColumnDefinitions>
                <local:DataGridColumnDefinition PropertyName="Name" />
                <local:DataGridColumnDefinition PropertyName="Surname" />
                <local:DataGridColumnDefinition PropertyName="Age" />
            </local:DataGrid.ColumnDefinitions>
        </local:DataGrid>
    </Grid>
</Window>
